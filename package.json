{
  "name": "quilt",
  "version": "1.0.0",
  "description": "Shopify's javascript application utilities",
  "scripts": {
    "publish": "lerna publish",
    "build": "yarn tsc --build packages",
    "lint": "eslint '**/*.{ts,tsx}'",
    "ci:lint-docs": "yarn generate docs && test -z \"$(git status --porcelain)\" || echo 'The root README has not been updated. Run `yarn generate docs` in the root of your quilt directory and try again.'",
    "_test": "NODE_ICU_DATA=node_modules/full-icu jest",
    "pretest": "yarn build",
    "test": "yarn _test --no-coverage",
    "test:ci": "yarn _test --maxWorkers=3 --coverage",
    "check": "lerna run check",
    "release": "lerna publish",
    "release-beta": "lerna publish --dist-tag beta",
    "clean": "rimraf './packages/*/dist'",
    "generate": "plop",
    "generate:package": "plop package && yarn plop docs",
    "tophat": "tophat"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shopify/quilt.git"
  },
  "author": "Shopify Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shopify/quilt/issues"
  },
  "homepage": "https://github.com/shopify/quilt#readme",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@shopify/app-bridge": "^0.7.3",
    "@shopify/tophat": "^0.0.3",
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.9.1",
    "@types/puppeteer": "^1.20.0",
    "@types/react": "16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-helmet": "^5.0.6",
    "apollo-cache-inmemory": "^1.3.6",
    "apollo-client": "^2.3.8",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-preset-shopify": "^20.0.0",
    "codecov": "^3.0.2",
    "element-closest": "^3.0.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.5.1",
    "eslint-plugin-shopify": "^32.0.0",
    "faker": "^4.1.0",
    "full-icu": "^1.3.0",
    "get-port": "^5.0.0",
    "graphql": "^14.0.0",
    "graphql-tag": "^2.10.0",
    "intl-pluralrules": "^0.2.1",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.0.1",
    "jest-transform-graphql": "^2.1.0",
    "lerna": "^2.9.0",
    "plop": "^2.0.0",
    "prettier": "~1.17.1",
    "puppeteer": "^1.20.0",
    "react": "16.12.0",
    "react-apollo": "^3.1.2",
    "react-dom": "16.12.0",
    "react-helmet": "^5.2.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "tslib": "^1.9.3",
    "typescript": "^3.6.2"
  },
  "dependencies": {},
  "resolutions": {
    "@types/react": "16.9.19",
    "@types/react-dom": "16.9.5"
  }
}
