{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./test/**/*.tsx"
  ],
  "exclude": ["./node_modules", "../../node_modules"]
}
