{
  "name": "@shopify/react-server",
  "version": "0.21.2",
  "license": "MIT",
  "description": "Utilities for React server-side rendering",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc --p tsconfig.json"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
