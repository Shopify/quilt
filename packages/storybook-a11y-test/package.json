  },
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "author": "Shopify Inc.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shopify/quilt.git",
    "directory": "packages/storybook-a11y-test"
  },
  "bugs": {
    "url": "https://github.com/Shopify/quilt/issues"
  },
  "homepage": "https://github.com/Shopify/quilt/blob/main/packages/storybook-a11y-test/README.md",
  "engines": {
    "node": "^14.17.0 || >=16.0.0"
  },
  "dependencies": {
    "@axe-core/puppeteer": "^4.3.2",
    "chalk": "^4.1.0",
    "koa": "^2.13.4",
    "koa-static": "^5.0.0",
    "p-map": "^4.0.0",
    "puppeteer": "^13.2.0"
  },
  "devDependencies": {
    "@storybook/react": "^6.4.15",
    "react": "^18.1.0"
  },
  "peerDependencies": {
    "@storybook/addon-a11y": ">=6.4.0",
    "@storybook/addons": ">=6.4.0"
  },
  "files": [
    "build/",
    "!build/*.tsbuildinfo",
    "!build/ts/**/tests/",
    "index.js",
    "index.mjs",
    "index.esnext"
