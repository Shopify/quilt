{
  "name": "@shopify/storybook-a11y-test",
  "version": "1.0.1",
  "license": "MIT",
  "description": "Test storybook pages with axe and puppeteer",
  "main": "index.js",
  "types": "./build/ts/index.d.ts",
  "sideEffects": false,
