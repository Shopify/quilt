{
  "name": "@shopify/declarative-forms",
  "version": "1.5.18",
  "main": "index.js",
  "types": "./build/ts/index.d.ts",
  "description": "React package to generate forms based on a schema",
  "sideEffects": false,
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "author": "Shopify Inc.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shopify/quilt.git",
    "directory": "packages/react-async"
  },
  "bugs": {
    "url": "https://github.com/Shopify/quilt/issues"
  },
  "homepage": "https://github.com/Shopify/quilt/blob/main/packages/declarative-forms/README.md",
  "engines": {
    "node": ">=12.14.0"
  },
  "files": [
    "build/",
    "!build/ts/config/",
    "!build/ts/stories/",
    "!build/ts/test/",
    "!build/**/*.test.*",
    "jest-preset.js"
  ],
  "browserslist": [
    "last 3 chrome versions",
    "last 3 chromeandroid versions",
    "last 3 firefox versions",
    "last 3 opera versions",
    "last 2 edge versions",
    "safari >= 10",
    "ios >= 9"
  ],
  "module": "index.mjs",
  "esnext": "index.esnext",
  "exports": {
    ".": {
      "esnext": "./index.esnext",
      "import": "./index.mjs",
      "require": "./index.js"
    },
    "./*": "./*"
  },
  "scripts": {
    "start": "serve ./docs",
    "prestart": "yarn build:doc",
    "lint": "loom lint",
    "type-check": "loom type-check",
    "format": "loom lint --fix",
    "test": "loom test",
    "test:coverage": "yarn test --coverage",
    "build": "loom build",
    "not_prebuild": "rimraf dist docs",
    "build:doc": "typedoc --excludePrivate ./src/index.ts",
    "build:local": "yarn build && cp -r ./build/* ../web/node_modules/@shopify/declarative-forms/build && restart shopify--web",
    "publish:docs": "yarn build:doc && sh ./doc-site.sh && rimraf docs",
    "deploy": "yarn run build && yarn test --watch=false && yarn version && git push --follow-tags",
    "changelog": "node ./scripts/changelog.js",
    "buildkite:ci:test": "yarn && loom lint && loom type-check && loom test --watch false",
    "buildkite:ci": "yarn && yarn build"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.180",
    "jest-extended": "^1.2.0",
    "serve": "^13.0.2",
    "typedoc": "^0.22.11"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "mobx": "^6.3.6"
  },
  "optionalDependencies": {
    "@shopify/jest-dom-mocks": "^3.0.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
